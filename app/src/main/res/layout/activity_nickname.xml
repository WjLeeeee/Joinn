<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:layout_marginTop="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text2" />



    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한번정하면 바꿀수 없으니 신중히 정해주세요."
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="#B5AEAE"
        android:ems="12"
        app:layout_constraintBottom_toTopOf="@+id/Text1"
        app:layout_constraintStart_toStartOf="@+id/Text1"
        app:layout_constraintTop_toBottomOf="@+id/Text1" />

    <EditText
        android:id="@+id/NickNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="닉네임"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/Text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NickText" />

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방에게 보여지는 이름입니다."
        android:textSize="13sp"
        android:ems="12"
        android:textColor="#B5AEAE"
        app:layout_constraintBottom_toTopOf="@+id/Text2"
        app:layout_constraintStart_toStartOf="@+id/NickNameText"
        app:layout_constraintTop_toBottomOf="@+id/NickNameText" />

    <TextView
        android:id="@+id/NickText"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="닉네임을 설정해주세요."
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        android:textSize="43sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />


</androidx.constraintlayout.widget.ConstraintLayout>